@model ShoppingCart.DataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<h1>Category Admin</h1>

<p>
    <a asp-area="Admin" asp-controller="Category" asp-action="CreateUpdate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Display Order</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.categories) {
       <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>

            <td>
                @Html.ActionLink("Update", "CreateUpdate", new { id=item.Id}) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
       </tr>
}
    </tbody>
</table>
