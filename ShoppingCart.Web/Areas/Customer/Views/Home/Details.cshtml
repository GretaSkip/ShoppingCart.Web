@model ShoppingCart.DataAccess.ViewModels.Cart

<hl>Product Details</hl>
<form method="post">
   <div class="row">
       <div class="col74">
            <img src="@Model.Product.ImageUrl" width="200" height="200"/>
            <input type="hidden" asp-for="ProductId"/>
        </div>
        <div elass="col-8">
            <div class="row">
                 <label asp-for="Product.Name">Product Name: @Model.Product.Name</Label>
                  <label asp-for="Product.Description">Product Description: @Model.Product.Description</label>
                  <label asp-for="Product.Description">Product Price: @Model.Product.Price.ToString("0.00 EUR")</label>
